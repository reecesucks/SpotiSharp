<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpotiSharp.Views.PlaylistSectionSectionCreator"
             xmlns:inputs="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:viewmodel="clr-namespace:SpotiSharp.ViewModels"
             xmlns:controls="clr-namespace:SpotiSharp.Controls">
        <Grid ColumnDefinitions="*" RowDefinitions="*">
        <Grid RowDefinitions="*,*,*" ColumnDefinitions="*,*,*"
              Grid.Row="1" Grid.Column="1" IsVisible="{Binding IsMusic}"
              x:DataType="viewmodel:PlaylistSectionSectionCreatorViewModel">
    <Border Stroke="{Binding Background}" StrokeThickness="4" StrokeShape="RoundRectangle 40,0,0,40" >
            <Picker Grid.Row="0" Grid.Column="0" 
                    ItemsSource="{Binding Playlists}"
                    SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}"
                    ItemDisplayBinding="{Binding PlayListTitle}"
                    SelectedIndexChanged="Playlist_SelectedIndexChanged"/>
    </Border>
            <Picker Grid.Row="0" Grid.Column="1" 
                    ItemsSource="{Binding PlaylistSectionTypes}"
                    SelectedItem="{Binding SelectedSectionType, Mode=TwoWay}"
                    ItemDisplayBinding="{Binding SectionTypeDescription}"
                    SelectedIndexChanged="SectionTypeMusicChangedHandler"/>
            <Label Grid.Row="0" Grid.Column="2"
                   x:Name="lblPlaceholder"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Text="select section type"/>
            <Entry Grid.Row="0" Grid.Column="2"
                   x:Name="entNumericValue"
                   IsVisible="False"
                   Text="{Binding NumericValue}"/>
            <controls:MultiSelectPicker Grid.Row="0" Grid.Column="2"
                               x:Name="msSongs"
                               IsVisible="False"
                               ItemsSource="{Binding SelectedPlaylistTracks}"
                               SelectedItems="{Binding MultiPickerSelections}"
                               DisplayMemberPath="Name">
            </controls:MultiSelectPicker>
        </Grid>

        <Grid ColumnDefinitions="*,*,*,*"
              Grid.Row="1" Grid.Column="1" IsVisible="{Binding IsPodcast}"
              x:DataType="viewmodel:PlaylistSectionSectionCreatorViewModel">
            <Border Stroke="{Binding Background}" StrokeThickness="2" StrokeShape="RoundRectangle 40,0,0,40" >
                <Picker Grid.Row="0" Grid.Column="0" 
                    ItemsSource="{Binding SavedShows}"
                    SelectedItem="{Binding SelectedSavedShow, Mode=TwoWay}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedIndexChanged="Podcast_SelectedIndexChanged"/>
            </Border>
            <Picker Grid.Row="0" Grid.Column="1" 
                    ItemsSource="{Binding PodcastSectionTypes}"
                    SelectedItem="{Binding SelectedSectionTypePod, Mode=TwoWay}"
                    ItemDisplayBinding="{Binding SectionTypeDescription}"
                    SelectedIndexChanged="SectionTypePodChangedHandler"/>
            <Label Grid.Row="0" Grid.Column="2"
                   x:Name="lblPlaceholderPod"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   Text="select section type"/>
            <Entry Grid.Row="0" Grid.Column="3"
                   x:Name="entNumericValuePod"
                   IsVisible="False"
                   Text="{Binding NumericValue}"/>
            <controls:MultiSelectPicker Grid.Row="0" Grid.Column="2"
                               x:Name="msSongsPod"
                               IsVisible="False"
                               ItemsSource="{Binding SelectedFullEpisodes}"
                               DisplayMemberPath="Name">
            </controls:MultiSelectPicker>
        </Grid>
    </Grid>
</ContentView>